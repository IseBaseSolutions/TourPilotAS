<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearElements"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserRemarksActivity" >

    <CheckBox
        android:id="@+id/chbConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_with"
        android:textSize="@dimen/text_size_middle" />

    <CheckBox
        android:id="@+id/chbMedchanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medications_changed"
        android:textSize="@dimen/text_size_middle" />

    <CheckBox
        android:id="@+id/chbPflege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aubrplanmabige_pflege"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/tvOther2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/other"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_size_middle" />

    <EditText
        android:id="@+id/etOther"
        android:layout_width="fill_parent"
        android:layout_height="248dp"
        android:layout_weight="0.79"
        android:focusable="true"
        android:gravity="top"
        android:top="2dp"
        android:visibility="visible" >
    </EditText>

    <LinearLayout
        android:id="@+id/linerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <Button
            android:id="@+id/btUserRemarkSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:text="@string/save"
            android:onClick="btUserRemarkSaveClick"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>

</LinearLayout>