			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">  
			    
			    <RadioButton android:id="@+id/rb_yes"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/nurse"
			        android:layout_weight="1"
			        android:onClick="onRadioButtonClicked"/>
			    <RadioButton android:id="@+id/rb_no"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/relative"
			        android:layout_weight="1"
			        android:onClick="onRadioButtonClicked"/>  	    
		
			</RadioGroup>
	        
		</LinearLayout>
		
	    <LinearLayout android:id="@+id/linear_layout_relative_selection"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/linear_layout_relative_or_nurse"  
	        android:orientation="vertical"
	        android:visibility="gone">
			
	        <TextView 
		        android:id="@+id/tv_10"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" 
		        android:text="@string/pain_analyse_select_relative"
		        android:textAppearance="?android:attr/textAppearanceLarge"/>
			    
			<Spinner
			    android:id="@+id/sp_relative"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" />
					
		</LinearLayout>
		
	    <LinearLayout android:id="@+id/linear_layout_grade"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom = "true"
	        android:orientation="vertical"
	        android:visibility="gone">
			
	        <TextView 
		        android:id="@+id/tv_grade"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" 
		        android:textAppearance="?android:attr/textAppearanceLarge"/>
	        
			<Spinner
			    android:id="@+id/sp_grades"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
			

	        
		</LinearLayout>
		
	<Button 			    
	    android:id="@+id/bt_ok_grades"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/ok"
	    android:visibility="gone"
	    android:onClick="onBtOkClicked"/>
	
	</RelativeLayout>
